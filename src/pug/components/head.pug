mixin head(title)

  head
    meta(charset='utf-8')
    title=title
    link(rel='stylesheet', href='css/style.min.css')

    link(rel='preload', href='fonts/roboto-regular.woff2', as='font', type='font/woff2', crossorigin='anonymous')
    link(rel='preload', href='fonts/roboto-medium.woff2', as='font', type='font/woff2', crossorigin='anonymous')
    link(rel='preload', href='fonts/roboto-bold.woff2', as='font', type='font/woff2', crossorigin='anonymous')

    link(rel='manifest' href='/manifest.webmanifest')
    link(rel='icon' href='/favicon.ico')
    link(rel='icon' href='/icon.svg' type='image/svg+xml')
    link(rel='apple-touch-icon' href='/apple-touch-icon.png')

    meta(property='og:title' content='Проект-макет верстки «Глэйси»')
    meta(property='og:description' content='Интернет-магазин по продаже мороженного собственного производства')
    meta(property='og:image' content='https://dreadwood.github.io/gllacy/img/og-image.jpg')
    meta(property='og:type' content='website')
    meta(property='og:url' content= 'https://dreadwood.github.io/gllacy/')
    meta(property='og:locale' content= 'ru_RU')
