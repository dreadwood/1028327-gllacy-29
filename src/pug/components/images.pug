mixin picture(className, image, width, height, altText)
  - var path = image.split('@')[0];
  - var format = image.split('.')[1];
  picture
    source(type='image/webp',
      srcset=`${path}@1x.webp 1x, ${path}@2x.webp 2x`)
    img(class=(className ? className : null),
      src=image,
      srcset=`${path}@2x.${format} 2x`,
      width=width,
      height=height,
      alt=altText)

mixin svg(className, name, width, height)
  svg(class=(className ? className : null), width=width, height=height )
    use(xlink:href=`img/sprite.svg#${name}`)
